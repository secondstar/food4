<%     @dfb_snapshots = list_group_item.snapshots.dfb

    if @dfb_snapshots.length > 0
      @eatery_dfb_tips = @dfb_snapshots.first.addendums.where(category: 'tips')

    end %>
<li class="list-group-item">
    <ul class="media-list">
      <li class="media">
        <div class="media-left">
          <%= link_to explore_path(list_group_item), 
              "data-toggle" => "modal", 
              "data-target" => 
              "#tallModal" do %>
              <% @photos= list_group_item.photos
                    if @photos.length > 0
                      @eatery_photo = @photos.first
                    else
                      @eatery_photo = Photo.first
                    end
                    @eatery_photo_url = "https://farm#{@eatery_photo.farm}.staticflickr.com/#{@eatery_photo.server}/#{@eatery_photo.flickr_id}_#{@eatery_photo.secret}_s.jpg"
                             %>
              <%= image_tag @eatery_photo_url, :class => "media-object", style: "width:100px" %>
          <% end %>
        </div>
        <div class="media-body">
            <div class="row">
              <div class="col-xs-8 col-sm-6">
          <h4 class="media-heading">
              <%= link_to list_group_item.name, 
                  explore_path(list_group_item), 
                  :role => "button", 
                  "data-toggle" => "modal", 
                  "data-target" => "#tallModal" %>
          </h4>
          <!-- -->
              </div>
              <div class="col-xs-4 col-sm-6">
                <!-- <div class="venueScore positive" title="" style="background-color: #00B551;">9.3</div> -->
                
              </div>
            </div>
            
          <div class="venueMeta">
              <div class="venueAddressData">
                  <div class="venueAddress"><%= list_group_item.district.name %></div>
                  <div class="venueData">
                      <span class="venueDataItem">
                          <span class="categoryName"><%= list_group_item.cuisine %></span>
                          <!-- <span class="delim"> • </span> -->
                      </span>
                      <span class="venueDataItem">
                          <span class="price" title="">
                              <span class="darken" itemprop="priceRange">
                                  <%= list_group_item.cost_code %>
                              </span> 
                              <!-- <span class="delim"> • </span> -->
                          </span>
                          <span class="linkToMenu venueDataItem">
                              <!-- <span class="menuLink link">View Menu</span> -->
                              <!-- <span class="delim"> • </span> -->
                          </span>
                      </div>
                  </div>
              </div>
          <!-- -->
        </div>
      </li>
    </ul>
    <ul class="texts">
		<% if !@eatery_dfb_tips.blank? %>
	 	  <% @eatery_dfb_tips.each do |dfb_tip| %>
                <% if dfb_tip.description.to_s.length > 3 %>
				<li >
					<%= dfb_tip.description.html_safe %>
				</li>
                <% end %>
			<% end %>
		<% else %>
		  <li>No tips yet!</li>
	 	<% end %>
        
    </ul>
</li>
